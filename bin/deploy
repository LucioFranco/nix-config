#!/bin/sh

HOST=wsl

case "$1" in
  wsl) 
    nix build .#homeConfigurations.wsl.activationPackage
    ./result/bin/home-manger switch --flake .#wsl
    ;;
  workbook) 
    nix build .#darwinConfigurations.workbook.system
    ./result/sw/bin/darwin-rebuild switch --flake .#workbook
    ;;
  *)
    echo "argument $1"
    ;;
esac
